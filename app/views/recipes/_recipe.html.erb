<div class="col-md-4">
  <div class="card">
    <img class="card-img-top" alt="Bootstrap Thumbnail First" src="https://diariodorio.com/wp-content/uploads/2018/10/bolo-cenoura-chocolate.jpg" />
    <div class="card-block">
      <h5 class="card-title">
        <%=link_to "#{recipe.title}", recipe %>
      </h5>
      <p class="card-text">
        Ingredientes: <%=recipe.ingredients %>
        <br>
        Preparo: <%=recipe.cook_method %>
      </p>
      <p>
        <%= link_to recipe, class: 'btn btn-primary' do %>
          Detalhes
        <% end %>
      </p>
    </div>
  </div>
</div>